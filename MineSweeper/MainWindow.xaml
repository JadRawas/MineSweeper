<Window x:Class="MineSweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineSweeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="570" Width="520" ResizeMode="NoResize">

    <Border Padding = "10" >
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Button Content="New Game"  BorderThickness="0" Foreground="#000000" IsEnabled="False" Width="80" Margin="0 0 15 0"/>
                <Button Content="Easy" Width="80" Margin="0 0 15 0" Click="Button_Click"/>
                <Button Content="Medium" Width="80" Margin="0 0 15 0" Click="Button_Click_1"/>
                <Button Content="Hard" Width="80" Click="Button_Click_2"/>
            </StackPanel>

            <Grid x:Name="Field" ButtonBase.Click="Field_Click" Width="480" Height="480">
                
                
                
            </Grid>
            
        </StackPanel>
    </Border>
</Window>
